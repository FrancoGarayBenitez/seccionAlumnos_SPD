<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
</head>
<body>
    <header>
        <%- include('./partials/_header'); %>
    </header>

    <main>
        <div class="row mt-4">
            
            <div class="col-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Fecha de inicio</th>
                            <th>Fecha de fin</th>
                            <th>Hora de inicio</th>
                            <th>Hora de fin</th>
                            <th>Asistencias</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) { %>

                            <% data.forEach(function(materia) { %>
                            <tr>
                                <td><%= materia.nombre %></td>
                                <td><%= materia.fecha_inicio %></td>
                                <td><%= materia.fecha_fin %></td>
                                <td><%= materia.hora_inicio %>hs</td>
                                <td><%= materia.hora_fin %>hs</td>
                                <td><%= materia.asistencias %>%</td>
                            </tr>
                            <% }); %>

                       <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <script src="../../public/js/bootstrap.min.js"></script>
</body>
</html>