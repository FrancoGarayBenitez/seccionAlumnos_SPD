<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
</head>
<body>
    <header>
        <%- include('./partials/_header'); %>
    </header>

    <main>
        <div class="row mt-4">
            
            <div class="col-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Materia</th>
                            <th>Primer Parcial</th>
                            <th>Segundo Parcial</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) { %>

                            <% data.forEach(function(materia) { %>
                            <tr>
                                <td><%= materia.nombre %></td>

                                <% if (materia.asistencias > 75) { %>
                                    <td>APROBADO</td>
                                <% } else { %>
                                    <td>DESAPROBADO</td>
                                <% } %>

                                <% if (materia.asistencias > 60) { %>
                                    <td>APROBADO</td>
                                <% } else { %>
                                    <td>DESAPROBADO</td>
                                <% } %>
                            </tr>

                            
                            <% }); %>

                       <% } %>
                    </tbody>
                </table>
            </div>
    </main>
    <script src="../../public/js/bootstrap.min.js"></script>
</body>
</html>