<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
</head>
<body>
    <header>
        <%- include('./partials/_header'); %>
    </header>


    <main>  
            <div class="row mt-4">
            
                <div class="col-12">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>N° Legajo</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>DNI</th>
                                <th>Teléfono</th>
                                <th>Email</th>
                                <th>Fecha de nacimiento</th>
                                <th>Edad</th>
                                <th>Dirección</th>
                                <th>Comision</th>
                                <th>Carrera</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data) { %>
    
                                <% data.forEach(function(alumno) { %>
                                <tr>
                                    <td><%= alumno.idlegajo %></td>
                                    <td><%= alumno.nombre %></td>
                                    <td><%= alumno.apellido %></td>
                                    <td><%= alumno.dni %></td>
                                    <td><%= alumno.telefono %></td>
                                    <td><%= alumno.email %></td>
                                    <td><%= alumno.fechaDeNacimiento %></td>
                                    <td><%= alumno.edad %></td>
                                    <td><%= alumno.direccion %></td>
        
                                    <% if (alumno.Comision_idComision == 1) { %>
                                        <td>A</td>
                                    <% } else { %>
                                        <td>B</td>
                                    <% } %>
                                    
                                    <% if (alumno.Carrera_idCarrera == 1) { %>
                                        <td>Tecnicatura en programación</td>
                                    <% } else if (alumno.Carrera_idCarrera == 2) { %>
                                        <td>Ingeniería</td>
                                    <% } else { %>
                                        <td>Enología</td>
                                    <% } %>
        
                                    <td>
                                        <a href="/delete/<%= alumno.idlegajo %>" class="btn btn-danger">Borrar</a>
                                    </td>
                                </tr>
                                <% }); %>
    
                           <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
    </main>

    <script src="../../public/js/bootstrap.min.js"></script>
</body>
</html>


